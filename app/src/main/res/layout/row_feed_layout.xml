<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/white"
>

    <ImageView
            android:id="@+id/profilePic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
    />

    <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/profilePic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/profilePic"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            tools:text="user name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Headline"

    />


    <ImageView
            android:background="@color/grey"
            android:id="@+id/ivFeed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            app:layout_constraintDimensionRatio="H,1:1"
    />

    <com.airbnb.lottie.LottieAnimationView
            app:layout_constraintStart_toStartOf="@id/ivFeed"
            app:layout_constraintEnd_toEndOf="@+id/ivFeed"
            app:layout_constraintTop_toTopOf="@id/ivFeed"
            app:layout_constraintBottom_toBottomOf="@id/ivFeed"
            android:id="@+id/image_loader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loader.json"
            app:lottie_loop="true"/>
    <ImageView android:layout_width="32dp"
               android:layout_height="32dp"
               android:id="@+id/ivLike"
               app:layout_constraintEnd_toStartOf="@+id/likeCount"
               app:srcCompat="@drawable/ic_favorite_filled"
               app:layout_constraintBottom_toBottomOf="@+id/ivFeed"
               app:layout_constraintEnd_toEndOf="@id/ivFeed"
               android:layout_marginEnd="4dp"
               android:layout_marginBottom="16dp"


    />

    <View
            android:layout_width="0dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="@id/ivFeed"
            app:layout_constraintEnd_toEndOf="@id/ivFeed"
            app:layout_constraintBottom_toBottomOf="@id/ivFeed"
            android:background="@drawable/overlay_gradient_linear" />
    <TextView
            android:id="@+id/likeCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="13"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/ivFeed"
            app:layout_constraintBottom_toBottomOf="@id/ivLike"
            app:layout_constraintTop_toTopOf="@id/ivLike"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginEnd="16dp"
            android:gravity="left"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
